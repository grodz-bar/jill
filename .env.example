# ==================================================
# JILL CONFIGURATION (Win/Linux/Non-Docker Setup)
# ==================================================
# Docker users: Configure directly in docker-compose.yml
#
# Windows/Linux users: Most settings are easier to edit in config/settings.yaml
# This file is mainly for DISCORD_TOKEN and GUILD_ID. Settings here take priority.
#
# IMPORTANT: To change a setting, UNCOMMENT it (remove the #):
#       #DEFAULT_VOLUME=44   <-- ignored (commented out)
#       DEFAULT_VOLUME=44    <-- active

# --------------------------------------------------
# REQUIRED (DON'T FORGET TO UNCOMMENT IT!)
# --------------------------------------------------
#DISCORD_TOKEN=                # Your bot token, see discord-setup.md for how to get it
							   # Only DISCORD_TOKEN is required to run Jill
							   
# --------------------------------------------------
# RECOMMENDED
# --------------------------------------------------
#GUILD_ID=                     # Your server ID - enables instant command sync
                               # Without this, slash commands can take up to 1h to appear
							   
# --------------------------------------------------
# PLAYBACK DEFAULTS
# --------------------------------------------------
#DEFAULT_VOLUME=50             # 0-100 Used if Jill doesn't know what volume was set to last
#AUTO_RESCAN=true              # Check for new/changed music files on startup
#INACTIVITY_TIMEOUT=10         # Minutes before auto-disconnect when alone (0 = never)
#DEFAULT_PLAYLIST=             # Playlist to auto-load on startup
							   # Jill will load the last playlist used if left blank
#PRESENCE_ENABLED=true         # Show "Listening to [song]" in bot status

# --------------------------------------------------
# QUEUE DISPLAY
# --------------------------------------------------
#QUEUE_DISPLAY_SIZE=15         # Tracks shown per page (1-50)
#PLAYLISTS_DISPLAY_SIZE=15     # Playlists shown per page (1-50)

# --------------------------------------------------
# PANEL APPEARANCE
# --------------------------------------------------
# The control panel is an interactive message with playback controls.
#PANEL_ENABLED=true            # Enable/disable the panel (commands still work)
#PANEL_COLOR=A03E72            # Hex color for panel accent (no # or 0x prefix)
#PROGRESS_BAR_ENABLED=true	   # Enable/disable the progress bar
#PROGRESS_BAR_FILLED=ðŸŸª        # Emoji for filled portion
#PROGRESS_BAR_EMPTY=â¬›         # Emoji for empty portion
#DRINK_EMOJIS_ENABLED=true     # Enable/disable emojis that cycle with each track
#INFO_FALLBACK_MESSAGE=mixing drinks and changing lives  # Shown when track has no artist/album
#SHUFFLE_BUTTON=true           # Show shuffle button on panel
#LOOP_BUTTON=true              # Show loop button on panel
#PLAYLIST_BUTTON=true          # Show playlist picker on panel
							   # Jill adjusts panel size based on how many buttons are enabled
							   # Disabling buttons does not disable /slash commands
							   # Playlist button is auto disabled when not using one
							   
# --------------------------------------------------
# PANEL PERFORMANCE
# --------------------------------------------------
#PROGRESS_UPDATE_INTERVAL=15   # Seconds between progress bar updates (10-3600)
#UPDATE_DEBOUNCE_MS=500        # Wait time (ms) before updating panel after actions (min: 300)
#RECREATE_INTERVAL=30          # Minutes before auto-recreating panel (0 = disable)
                               # Recreating prevents Discord lag, disabling not recommended

# --------------------------------------------------
# COMMANDS
# --------------------------------------------------
#SHUFFLE_COMMAND=true          # Enable /shuffle slash command
#LOOP_COMMAND=true             # Enable /loop slash command
#RESCAN_COMMAND=true           # Enable /rescan slash command (admin)
							   # Disabling commands does not disable buttons
							   # Playlist command is auto disabled when not using one

# --------------------------------------------------
# UI TIMING
# --------------------------------------------------
#EXTENDED_AUTO_DELETE=90       # Seconds before info displays auto-delete (0 = never)
#BRIEF_AUTO_DELETE=10          # Seconds before feedback messages auto-delete (0 = never)
							   # Keeping these enabled keep things clean and tidy
							   
# --------------------------------------------------
# PERMISSIONS
# --------------------------------------------------
# Restrict who can use playback commands (play, skip, volume, etc.)
# See permissions.yaml for full configuration.
#ENABLE_PERMISSIONS=false      # Set true to enable role-based restrictions
#BARTENDER_ROLE_ID=            # Discord role ID that can use playback commands

# --------------------------------------------------
# LOGGING
# --------------------------------------------------
#LOG_LEVEL=minimal             # minimal, verbose, or debug
                               # minimal: errors and milestones
                               # verbose: + voice events, auto-pause/resume
                               # debug: + HTTP requests, internal state
							   
# --------------------------------------------------
# PATHS
# --------------------------------------------------
# Defaults work for most setups. Docker users: docker-compose.yml sets these.

# Music folder location. Point to an existing library or keep the default.
#MUSIC_PATH=./music

#CONFIG_PATH=./config
#DATA_PATH=./data

# --------------------------------------------------
# INFRASTRUCTURE (advanced)
# --------------------------------------------------
# Jill uses Lavalink (a separate audio server) to stream music to Discord.
# The bot also runs a small HTTP server so Lavalink can fetch audio files.
#
# DEFAULT SETUP (everything on one machine):
#   - Leave these alone, defaults work
#
# DOCKER SETUP:
#   - docker-compose.yml sets these automatically
#
# SPLIT SETUP (Lavalink on different machine):
#   - LAVALINK_HOST = IP of the machine running Lavalink
#   - HTTP_SERVER_HOST = 0.0.0.0 (so Lavalink can reach the bot)
#
#MANAGE_LAVALINK=true             # Set false if sharing one Lavalink between multiple bots
                                  # When true, Jill kills stale Lavalink on startup and shutdown
#LAVALINK_HOST=127.0.0.1         # Where Lavalink is running (127.0.0.1 = same machine)
#LAVALINK_PORT=2333              # IMPORTANT! IF YOU CHANGE THIS, ALSO CHANGE 'port: 2333' inside lavalink/application.yml
#HTTP_SERVER_HOST=127.0.0.1      # Bot's audio server bind address (0.0.0.0 = allow remote)
#HTTP_SERVER_URL_HOST=           # Override hostname in URLs sent to Lavalink
                                 # Docker: set to container name (jill)
                                 # Native: leave unset (uses HTTP_SERVER_HOST)
#HTTP_SERVER_PORT=2334           # Bot's audio server port
# Lavalink password (defaults match - no change needed)
# Change only if connecting to external Lavalink with a different password
#LAVALINK_PASSWORD=timetomixdrinksandnotchangepasswords